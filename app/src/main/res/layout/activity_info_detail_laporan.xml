<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infoDetailLaporan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:verticalScrollbarPosition="right">

        <LinearLayout
            android:id="@+id/contentall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBackLaporan"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/green_accent"
                android:drawableLeft="@drawable/ic_back"
                android:padding="0dp"
                android:text="Back"
                android:textSize="@dimen/_10sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail Informan"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10sdp">
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:stretchColumns="2"
                                android:padding="10dp" >

                                <TableRow>
                                    <TextView
                                        android:text="Nama"
                                        android:layout_column="1"
                                        android:padding="3dip"
                                        android:layout_width="140dp"
                                        android:textSize="@dimen/_12sdp"
                                        />
                                    <TextView
                                        android:text="Name"
                                        android:padding="3dip"
                                        android:textSize="@dimen/_12sdp"
                                        android:id="@+id/lblNamaLaporan"
                                        />
                                </TableRow>
                                <TableRow android:layout_marginTop="10dp">
                                    <TextView
                                        android:text="Waktu"
                                        android:layout_column="1"
                                        android:padding="3dip"
                                        android:layout_width="140dp"
                                        android:textSize="@dimen/_12sdp"
                                        />
                                    <TextView
                                        android:text="Name"
                                        android:padding="3dip"
                                        android:textSize="@dimen/_12sdp"
                                        android:id="@+id/lblWaktuLaporan"
                                        />
                                </TableRow>
                                <TableRow android:layout_marginTop="10dp">
                                    <TextView
                                        android:text="Status"
                                        android:layout_column="1"
                                        android:padding="3dip"
                                        android:layout_width="140dp"
                                        android:textSize="@dimen/_12sdp"
                                        />
                                    <TextView
                                        android:text="Name"
                                        android:padding="3dip"
                                        android:textSize="@dimen/_12sdp"
                                        android:id="@+id/lblStatusLaporan"
                                        />
                                </TableRow>

                            </TableLayout>



                        </HorizontalScrollView>


                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/black">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail Laporan Masalah"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/lblDetailLaporan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Isiannya Detail Laporan Masalah"
                            android:padding="3dip"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="5dp"
                            />

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi Laporan Masalah"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp">

                        <com.mapbox.mapboxsdk.maps.MapView
                            android:id="@+id/map_laporan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            mapbox:mapbox_styleUrl="mapbox://styles/mapbox/streets-v10"

                            />

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>