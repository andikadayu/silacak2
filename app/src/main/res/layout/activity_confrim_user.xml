<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/give_us_a_review_landmine_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameAppss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="Data Pengguna Baru"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_23sdp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/cfrm_idBaru"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@id/nameAppss"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:background="@drawable/rounded_mode"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="ID"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/cfrm_namaBaru"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@id/cfrm_idBaru"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:background="@drawable/rounded_mode"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Nama"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/cfrm_emailBaru"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@id/cfrm_namaBaru"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:background="@drawable/rounded_mode"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="E-Mail"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <Button
                    android:id="@+id/buttonConfirmBaru"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cfrm_emailBaru"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginTop="53dp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:background="@drawable/rounded_mode"
                    android:gravity="center"
                    android:text="Confirm Anggota"
                    android:textSize="@dimen/_15sdp" />

                <Button
                    android:id="@+id/buttonBukaBlokir"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonConfirmBaru"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:background="@drawable/rounded_mode"
                    android:gravity="center"
                    android:text="Buka Blokir"
                    android:textSize="@dimen/_15sdp" />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>