<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_feature">


    <ImageView
        android:id="@+id/locationimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_baseline_place_24" />


    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Use your Location"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtJelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtJudul"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:text="@string/jelas"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txtbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtJelas"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:text="@string/backgrounds"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/acceptpermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtbackground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Accept" />

</RelativeLayout>