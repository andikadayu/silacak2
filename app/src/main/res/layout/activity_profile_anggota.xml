<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".profileAdmin">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/anggotaNav">
        <LinearLayout
            android:id="@+id/contentall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    android:background="@color/black">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/profilScane">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/imgprofileanggota"
                                        android:layout_width="@dimen/_75sdp"
                                        android:layout_height="@dimen/_75sdp"
                                        android:gravity="center"
                                        android:src="@drawable/user1"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_20sdp"
                                        app:civ_border_width="2dp"
                                        app:civ_border_color="#FF000000"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtnamaanggota"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_14sdp"
                                        android:text="NAMA"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtnrpanggota"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:text="NRP"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_13sdp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/_10sdp">
                                        <Button
                                            android:id="@+id/btneditfoto"
                                            android:layout_width="@dimen/_40sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            android:padding="@dimen/_10sdp"
                                            android:backgroundTint="@android:color/holo_blue_light"
                                            android:drawableLeft="@drawable/ic_baseline_edit_24"
                                            />
                                        <Button
                                            android:id="@+id/btnlogoutsAnggota"
                                            android:layout_width="@dimen/_40sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            android:padding="@dimen/_10sdp"
                                            android:backgroundTint="@android:color/holo_red_dark"
                                            android:drawableLeft="@drawable/ic_baseline_power_settings_new_24"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            />
                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Biodata Diri"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textStyle="bold"/>
                            <Button
                                android:id="@+id/btneditbiodata"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:padding="@dimen/_10sdp"
                                android:backgroundTint="@color/green"
                                android:drawableLeft="@drawable/ic_baseline_person_search_24"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/_10sdp">
                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:stretchColumns="2"
                                android:padding="10dp">

                                <TableRow>
                                    <TextView
                                        android:text="Nama"
                                        android:layout_column="1"
                                        android:padding="3dip"
                                        android:layout_width="150dp"
                                        android:textSize="@dimen/_10sdp"
                                        />
                                    <TextView
                                        android:text="Name"
                                        android:padding="3dip"
                                        android:textSize="@dimen/_10sdp"
                                        android:id="@+id/lblNamaBio"
                                        />
                                </TableRow>

                                <TableRow android:layout_marginTop="10dp">
                                    <TextView
                                        android:text="Jenis Kelamin"
                                        android:layout_column="1"
                                        android:padding="3dip"
                                        android:layout_width="150dp"
                                        android:textSize="@dimen/_10sdp"
                                        />
                                    <TextView
                                        android:text="Name"
                                        android:padding="3dip"
                                        android:textSize="@dimen/_10sdp"
                                        android:id="@+id/lblJenisBio"
                                        />
                                </TableRow>

                                <TableRow android:layout_marginTop="10dp">
                                    <TextView
                                        android:text="Email"
                                        android:layout_column="1"
                                        android:padding="3dip"
                                        android:layout_width="150dp"
                                        android:textSize="@dimen/_10sdp"
                                        />
                                    <TextView
                                        android:text="Name"
                                        android:padding="3dip"
                                        android:textSize="@dimen/_10sdp"
                                        android:id="@+id/lblEmailBio"
                                        />
                                </TableRow>


                                <TableRow android:layout_marginTop="10dp">
                                    <TextView
                                        android:text="Tempat,Tanggal Lahir"
                                        android:layout_column="1"
                                        android:padding="3dip"
                                        android:layout_width="150dp"
                                        android:textSize="@dimen/_10sdp"
                                        />
                                    <TextView
                                        android:text="Name"
                                        android:padding="3dip"
                                        android:textSize="@dimen/_10sdp"
                                        android:id="@+id/lblTTLBio"
                                        />
                                </TableRow>

                                <TableRow android:layout_marginTop="10dp">
                                    <TextView
                                        android:text="Alamat"
                                        android:layout_column="1"
                                        android:padding="3dip"
                                        android:layout_width="150dp"
                                        android:textSize="@dimen/_10sdp"
                                        />
                                    <TextView
                                        android:text="Name"
                                        android:padding="3dip"
                                        android:textSize="@dimen/_10sdp"
                                        android:id="@+id/lblAlamatBio"
                                        />
                                </TableRow>

                            </TableLayout>
                            </HorizontalScrollView>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Informasi Nomor Register Pokok"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="@dimen/_190sdp"
                            android:layout_height="@dimen/_190sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:id="@+id/imgQR"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="No : 12312321"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:id="@+id/lblNRPBio"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/anggotaNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_anggota" />

</RelativeLayout>