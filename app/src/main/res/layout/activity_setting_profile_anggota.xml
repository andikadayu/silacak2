<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingProfileAnggota">

    <Button
        android:id="@+id/btnBackAnggota"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/green_accent"
        android:drawableLeft="@drawable/ic_back"
        android:padding="0dp"
        android:text="Back"
        android:textSize="@dimen/_10sdp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBackAnggota">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/black"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biodata Diri"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textStyle="bold"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TableRow>
                            <TextView
                                android:text="Nama"
                                android:layout_column="1"
                                android:padding="3dip"
                                android:layout_width="150dp"
                                android:textSize="@dimen/_12sdp"
                                />

                            <EditText
                                android:hint="Nama"
                                android:padding="3dip"
                                android:textSize="@dimen/_12sdp"
                                android:id="@+id/txtNamaBioAng"
                                />

                        </TableRow>

                        <TableRow android:layout_marginTop="12dp">
                            <TextView
                                android:text="Jenis Kelamin"
                                android:layout_column="1"
                                android:padding="3dip"
                                android:layout_width="150dp"
                                android:textSize="@dimen/_12sdp"
                                />
                            <Spinner
                                android:id="@+id/spnJenisAng"
                                android:padding="3dip"
                                android:textSize="@dimen/_12sdp"
                                />
                        </TableRow>

                        <TableRow android:layout_marginTop="12dp">
                            <TextView
                                android:text="Email"
                                android:layout_column="1"
                                android:padding="3dip"
                                android:layout_width="150dp"
                                android:textSize="@dimen/_12sdp"
                                />
                            <EditText
                                android:hint="Email"
                                android:padding="3dip"
                                android:textSize="@dimen/_12sdp"
                                android:id="@+id/txtEmailBioAng"
                                />
                        </TableRow>


                        <TableRow android:layout_marginTop="12dp">
                            <TextView
                                android:text="Tempat Lahir"
                                android:layout_column="1"
                                android:padding="3dip"
                                android:layout_width="150dp"
                                android:textSize="@dimen/_12sdp"
                                />
                            <EditText
                                android:hint="Tempat Lahir"
                                android:padding="3dip"
                                android:textSize="@dimen/_12sdp"
                                android:id="@+id/txtTempatBioAng"
                                />
                        </TableRow>

                        <TableRow android:layout_marginTop="12dp">
                            <TextView
                                android:text="Tanggal Lahir"
                                android:layout_column="1"
                                android:padding="3dip"
                                android:layout_width="150dp"
                                android:textSize="@dimen/_12sdp"
                                />
                            <EditText
                                android:hint="Tanggal Lahir"
                                android:padding="3dip"
                                android:textSize="@dimen/_12sdp"
                                android:id="@+id/txtTanggalBioAng"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                />
                        </TableRow>

                        <TableRow android:layout_marginTop="12dp">
                            <TextView
                                android:text="Alamat"
                                android:layout_column="1"
                                android:padding="3dip"
                                android:layout_width="150dp"
                                android:textSize="@dimen/_12sdp"
                                />
                            <EditText
                                android:hint="Alamat"
                                android:padding="3dip"
                                android:textSize="@dimen/_12sdp"
                                android:id="@+id/txtAlamatBioAng"
                                />
                        </TableRow>

                    </TableLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Simpan"
                        android:textSize="@dimen/_10sdp"
                        android:padding="0dp"
                        android:background="@color/green"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/btnsimpanBioAnggota"
                        android:drawableLeft="@drawable/ic_baseline_save_24"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/black"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ubah Password"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textStyle="bold"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TableRow>
                            <TextView
                                android:text="Password Lama"
                                android:layout_column="1"
                                android:padding="3dip"
                                android:layout_width="150dp"
                                android:textSize="@dimen/_12sdp"
                                />

                            <EditText
                                android:hint="Password Lama"
                                android:padding="3dip"
                                android:textSize="@dimen/_12sdp"
                                android:id="@+id/txtoldpassBioAng"
                                android:inputType="textPassword"
                                />

                        </TableRow>

                        <TableRow android:layout_marginTop="12dp">
                            <TextView
                                android:text="Password Baru"
                                android:layout_column="1"
                                android:padding="3dip"
                                android:layout_width="150dp"
                                android:textSize="@dimen/_12sdp"
                                />
                            <EditText
                                android:hint="Password Baru"
                                android:padding="3dip"
                                android:textSize="@dimen/_12sdp"
                                android:id="@+id/txtnewpassBioAng"
                                android:inputType="textPassword"
                                />
                        </TableRow>

                        <TableRow android:layout_marginTop="12dp">
                            <TextView
                                android:text="Konfirmasi Password Baru"
                                android:layout_column="1"
                                android:padding="3dip"
                                android:layout_width="150dp"
                                android:textSize="@dimen/_12sdp"
                                />
                            <EditText
                                android:hint="Konfirmasi Password Baru"
                                android:padding="3dip"
                                android:textSize="@dimen/_12sdp"
                                android:id="@+id/txtcfrpassBioAng"
                                android:inputType="textPassword"
                                />
                        </TableRow>

                    </TableLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Simpan"
                        android:textSize="@dimen/_10sdp"
                        android:padding="0dp"
                        android:background="@color/green"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/btnsimpanPassAng"
                        android:drawableLeft="@drawable/ic_baseline_save_24"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>